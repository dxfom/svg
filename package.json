{
  "name": "@dxfom/svg",
  "version": "0.0.4",
  "description": "",
  "license": "GPL-3.0",
  "repository": "dxfom/svg",
  "keywords": [
    "dxf"
  ],
  "main": "index.mjs",
  "module": "index.mjs",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm-run-all -p typecheck build:*",
    "build:mjs": "rollup -c",
    "build:dts": "dts-bundle-generator --no-banner --inline-declare-externals -o index.d.ts src/index.ts",
    "typecheck": "tsc -p .",
    "start": "npm-run-all -p watch:*",
    "watch:mjs": "rollup -c -w",
    "watch:viewer": "esbuild --resolve-extensions=.ts,.mjs --bundle --minify --serve --outdir=viewer --servedir=viewer viewer/app.ts",
    "test": "node --harmony --es-module-specifier-resolution=node bin/dxf2svg.mjs sample/1.dxf"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-react-jsx": "^7.20.13",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "dts-bundle-generator": "^7.2.0",
    "esbuild": "^0.17.5",
    "npm-run-all": "^4.1.5",
    "rollup": "^3.12.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@dxfom/color": "^0.1.1",
    "@dxfom/dxf": "^0.0.2",
    "@dxfom/mtext": "^0.3.2",
    "@dxfom/text": "^0.2.0"
  },
  "prettier": {
    "printWidth": 140,
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  }
}
